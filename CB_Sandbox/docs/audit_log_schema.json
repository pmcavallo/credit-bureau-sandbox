{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Credit Decision Audit Log",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "model_version": {
      "type": "string"
    },
    "request": {
      "type": "object"
    },
    "response": {
      "type": "object"
    },
    "features_used": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "explanations": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "reason_codes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "latency_ms": {
      "type": "number"
    }
  },
  "required": [
    "event_id",
    "timestamp",
    "model_version",
    "request",
    "response"
  ]
}
